
check process logstash with pidfile "/var/run/logstash.pid"
	group elasticsearch
	depends on elasticsearch
	start program = "/etc/init.d/logstash start"
	stop program = "/etc/init.d/logstash stop"
	if cpu > 90% for 5 cycles then restart
	if totalmem > 2 GB for 5 cycles then restart
	if 3 restarts within 5 cycles then timeout

check process logstash-web with pidfile "/var/run/logstash-web.pid"
	group elasticsearch
	depends on elasticsearch,logstash
	start program = "/etc/init.d/logstash-web start"
	stop program = "/etc/init.d/logstash-web stop"
	if cpu > 90% for 5 cycles then restart
	if totalmem > 2 GB for 5 cycles then restart
	if 3 restarts within 5 cycles then timeout

