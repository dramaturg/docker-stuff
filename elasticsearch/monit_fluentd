
check process fluentd with pidfile "/var/run/td-agent/td-agent.pid"
	group elasticsearch
	depends on elasticsearch
	start program = "/etc/init.d/td-agent start"
	stop program = "/etc/init.d/td-agent stop"
	if cpu > 90% for 5 cycles then restart
	if totalmem > 2 GB for 5 cycles then restart
	if 3 restarts within 5 cycles then timeout
	if failed url http://127.0.0.1:24220/ with timeout 15 seconds then restart

